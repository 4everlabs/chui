{
  "name": "chui",
  "version": "0.0.13",
  "module": "src/index.tsx",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "lint": "oxlint .",
    "clean": "rm -rf dist",
    "build:bundle": "bun build src/index.ts --target=bun --minify --sourcemap --outdir dist/bundle",
    "build:release": "bun run scripts/release-build.ts",
    "build:release:current": "bun run scripts/release-build.ts current",
    "build:release:all": "bun run scripts/release-build.ts bun-linux-x64 bun-linux-arm64 bun-darwin-arm64 bun-windows-x64",
    "ci:quick": "bun run lint && bun run build:bundle",
    "ci:full": "bun run ci:quick && bun run build:release:current",
    "ci:release": "bun run ci:quick && bun run build:release:all",
    "convex:dev": "bun x convex dev",
    "auth:generate-schema": "bun x @better-auth/cli generate --config ./convex/betterAuth/auth.ts --output ./convex/betterAuth/schema.ts",
    "version:bump": "bun run scripts/bump-version.ts",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "husky": "^9.1.7",
    "oxlint": "^1.48.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@convex-dev/better-auth": "0.10.10",
    "@opentui/core": "^0.1.77",
    "better-auth": "1.4.9",
    "convex": "1.31.7"
  }
}
